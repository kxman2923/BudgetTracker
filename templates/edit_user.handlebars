<style>
	.center{
		text-align: center;
	}
    body {
        background-color: black;
    }
</style>
<div class="jumbotron">
	<div class= "row">
		<div class="col-md-4"></div>
		<div class="col-md-4">
			<div class="form-horizontal">
				<h3 class="center"> {{{username}}}'s Settings </h3>
				<div class="form-group">
					<label for="fn" class="col-sm-4 control-label">New Full Name</label>
					<div class="col-sm-8">
						<input type="text" id="fn" class="form-control" placeholder="{{{fullName}}}">
					</div>
				</div>
				<div class="form-group">
					<label for="email" class="col-sm-4 control-label">New Email</label>
					<div class="col-sm-8">
						<input type= "text" id="email" class="form-control" placeholder="{{{email}}}">
					</div>
				</div>
				<div class="form-group">
					<label for="ps" class="col-sm-4 control-label">New Password</label>
					<div class="col-sm-8">
						<input type="password" id="ps" class="form-control" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;">
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-4 col-sm-8">
						<input type="button" id="save" class="btn btn-primary" value="Save">
						<input type="button" id="delete" class="btn btn-danger"value="Delete">
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-4"></div>
	</div>
</div>
